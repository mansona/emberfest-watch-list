<PaperItem @noink={{true}} as |controls|>
  {{#if @item.author}}
    <img src={{this.img}} alt={{@item.author}} class="md-avatar">
  {{/if}}
  <div class="md-list-item-text">
    <h3>{{@item.title}}</h3>
    <PaperButton @onClick={{this.onToggleDescription}}>
      {{if this.showDescription 'Hide' 'Show'}} description
    </PaperButton>
    {{#if this.showDescription}}
      <p>
        {{@item.description}}
      </p>
    {{/if}}
  </div>
  <div class="md-secondary-container">
    <controls.checkbox @value={{this.checked}} @onChange={{this.onChecked}} />
    <PaperButton @iconButton={{true}} @href="https://www.youtube.com/watch?v={{@item.video}}" @target="_blank">
      {{paper-icon "play-circle-filled"}}
    </PaperButton>
  </div>
</PaperItem>

{{#if this.showDialog}}
{{confetti  colors=(array "#41f3fc" "#13b2f2" "#7f3b86") angle=60 spread=50 originX=0 continuous=false}}
{{confetti  colors=(array "#41f3fc" "#13b2f2" "#7f3b86") angle=120 spread=50 originX=1 continuous=false}}
<PaperDialog @class="flex-77" @onClose={{this.closeDialog}} @clickOutsideToClose={{true}}>
    <PaperToolbar>
      <PaperToolbarTools>
        <h2>Congratulations üéâ</h2>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{this.closeDialog}}><PaperIcon @icon="close" /></PaperButton>
      </PaperToolbarTools>
    </PaperToolbar>

    <PaperDialogContent>
      <p>
        You have just watched "{{@item.title}}"! Why don't you tweet about it and let people know what your favorite part of the video was üëá
      </p>
      <PaperButton @primary={{true}} @href="https://twitter.com/intent/tweet?text={{this.tweetText}}" @target="blank" rel="nofollow noreferrer">Tweet now üê§</PaperButton>
    </PaperDialogContent>

    <PaperDialogActions @class="layout-row">
      <span class="flex"></span>
      <PaperButton @onClick={{this.closeDialog}}>Close</PaperButton>
    </PaperDialogActions>
  </PaperDialog>
{{/if}}
